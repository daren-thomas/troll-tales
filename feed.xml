---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <!-- Site Metadata -->
  <title>{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}{{ site.baseurl }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/</id>

  {% for post in site.posts %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link href="{{ site.url }}{{ post.url | xml_escape }}"/>
    <id>{{ site.url }}{{ post.url | xml_escape }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <summary type="html"><![CDATA[{{ post.excerpt }}]]></summary>
    <content type="html"><![CDATA[
      {{ post.content | absolute_img_urls: (post.url | post_base_url) }}
    ]]></content>
  </entry>
  {% endfor %}
</feed>